generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      UserStatus @default(MEMBER)
  image String?
  isActive Boolean
  createdAt DateTime   @default(now())
}

enum UserStatus {
  MEMBER
  ADMIN
}
